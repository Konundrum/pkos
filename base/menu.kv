
<MenuButton@PKButton>:
  canvas.before:
    PushMatrix:
    Color:
      rgba: active if self.is_active else inactive
    Rectangle:
      pos: self.pos
      size: self.size
    PopMatrix:



<MenuDialog>:
  size_hint: (None, None)
  size: (300, 300)
  pos_hint: {'center_x': .5, 'center_y': .5 }
  orientation: 'vertical'

  MenuButton:
    text: 'New'
    on_press: True

  MenuButton:
    text: 'Save'
    on_press:
      app.controller.file.save()
      app.root.on_toggle_menu(app.controller)

  MenuButton:
    text: 'Load'
    on_press: True

  MenuButton:
    text: 'Quit'
    on_press: app.stop()

