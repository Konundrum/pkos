
<ContextTab>:
    color: font_gold if self.model.is_selected else font_dark
    font_size: '12sp'
    padding: [space_l, space_m]

    size: self.texture_size
    size_hint: (None, None)
    text: 'tab #' + self.model.name

    canvas.before:
        PushMatrix:
        Color:
            rgba: active if self.model.is_selected else inactive
        Rectangle:
            pos: self.pos
            size: self.size
        Line:
            width: 3.0
            points: self.x,self.y,self.x,self.top,self.right,self.top,self.right,self.y
        PopMatrix:

    on_press: self.parent.close_tab(self)



<ContextTabRow>:
    padding: [space_m, 0]
    spacing: space_l

    canvas:
        PushMatrix:
        Color:
            rgba: bg_light
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix:



<ContextView>:
    canvas:
        PushMatrix:
        Color:
            rgba: black
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix:


    TextInput:
        background_color: bg_dark
        cursor_color: font_light
        foreground_color: font_light
        text: 'hello'

