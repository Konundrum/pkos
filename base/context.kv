
<ContextTab>:
  color: font_dark
  font_size: '12sp'
  text: 'tab #' + self.model.name if self.model else ''
  padding: [ 12, 2 ]
  size_hint: (None, None)
  size: self.texture_size

  on_press: self.parent.collection.remove(self.model)

  canvas.before:
    PushMatrix:
    Color:
      rgba: active if (self.model and self.model.is_selected) else inactive
    Rectangle:
      pos: self.pos
      size: self.size
    Line:
      width: 1.0
      points: self.x,self.y,self.x,self.top,self.right,self.top,self.right,self.y
    PopMatrix:



<ContextTabRow>:
  # orientation: 'horizontal'

  spacing: space_l

  canvas.before:
    PushMatrix:
    Color:
      rgba: bg_light
    Rectangle:
      pos: self.pos
      size: self.size
    PopMatrix:



<ContextView>:
  TextInput:
    text: 'hello'
    background_color: bg_dark
    foreground_color: font_light
    cursor_color: font_light