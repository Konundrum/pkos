
<ContextTab>:
  color: font_dark
  font_size: '12sp'
  text: 'name: ' + self.model.name if self.model else ''
  padding: [ 10, 4 ]
  size_hint: (None, None)
  size: self.texture_size

  on_press: self.parent.data.remove(self.model)

  canvas.before:
    PushMatrix:
    Color:
      rgba: unselected
    Rectangle:
      pos: self.pos
      size: self.size
    PopMatrix:



<ContextTabRow>:
  # orientation: 'horizontal'

  spacing: spacer

  canvas.before:
    PushMatrix:
    Color:
      rgba: bg_light
    Rectangle:
      pos: self.pos
      size: self.size
    PopMatrix:



